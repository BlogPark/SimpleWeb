@using Webdiyer.WebControls.Mvc
@model SimpleWeb.Areas.AdminArea.Models.membercapitaldetailViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">惩罚会员</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    <form role="form" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">惩罚类型：</label>
                            <div class="col-sm-7">
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios2" value="1" checked>
                                    惩罚静态资金
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios2" value="2">
                                    惩罚动态资金
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">惩罚金额：</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="money" name="money" placeholder="惩罚金额" />
                                <input type="hidden" value="0" id="memid" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">惩罚原因：</label>
                            <div class="col-sm-7">
                                <textarea rows="3" class="form-control" id="punishmentreason"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" class="btn btn-primary" onclick="punishment()">确 定</button>
            </div>
        </div>
    </div>
</div>
