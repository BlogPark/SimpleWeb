@using Webdiyer.WebControls.Mvc
@model SimpleWeb.Areas.AdminArea.Models.membercapitaldetailViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">惩罚会员</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    <form role="form" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">惩罚金额：</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="money" name="money" placeholder="惩罚金额" />
                                <input type="hidden" value="0" id="memid" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">惩罚原因：</label>
                            <div class="col-sm-7">
                                <textarea rows="3" class="form-control" id="punishmentreason"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" class="btn btn-primary" onclick="punishment()">确 定</button>
            </div>
        </div>
    </div>
</div>
<!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">会员管理</a>
                            </li>
                            <li>会员资产</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">会员资产</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("membercapitaldetail", "Order", FormMethod.Get, new { @id = "form1" }))
                        {                            
                            <div class="form-group">
                                <label class="pull-left control-label">手机号</label>
                                <div class="col-sm-2">
                                    @Html.TextBoxFor(m => m.smodel.MemberPhone, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="pull-left control-label">真实姓名</label>
                                <div class="col-sm-2">
                                    @Html.TextBoxFor(m => m.smodel.MemberName, new { @class = "form-control" })
                                </div>
                            </div>                           
                            <div class="btn-group hidden-xs pull-right invoice-btn-group">
                                <p class="btn-toolbar">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i>&nbsp;搜索</button>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">真实姓名</th>
                                    <th class="text-center">手机号</th>
                                    <th class="text-center">静态资金</th>
                                    <th class="text-center">动态资金</th>
                                    <th class="text-center">静态利息</th>
                                    <th class="text-center">动态奖励</th>
                                    <th class="text-center">惩罚资金</th>
                                    <th class="text-center">静态冻结</th>
                                    <th class="text-center">动态冻结</th>
                                    <th class="text-center">操    作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.list)
                                {
                                    <tr id="tr@(item.MemberID)" class="text-center">
                                        <td  name="@(item.MemberID)">@item.MemberName</td>
                                        <td>@item.MemberPhone</td>
                                        <td>@item.StaticCapital</td>
                                        <td>@item.DynamicFunds</td>
                                        <td>@item.StaticInterest</td>
                                        <td>@item.DynamicInterest</td>
                                        <td>@item.DynamicPunishMoney</td>
                                        <td>@item.StaticFreezeMoney</td>
                                        <td>@item.DynamicFreezeMoney</td>
                                        <td>
                                            <p class="btn-toolbar">
                                                <a class="btn btn-danger" data-toggle="modal"  href="#box-config" onclick="aclick(@item.MemberID)"><i class="fa fa-times-circle"></i>&nbsp; 惩&nbsp;&nbsp;罚</a>
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row center col-xs-12 mycss">
                        @Html.Pager(Model.list, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
