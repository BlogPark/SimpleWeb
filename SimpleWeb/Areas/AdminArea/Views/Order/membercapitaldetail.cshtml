<div id="modal-custom" class="iziModal">
     <header>
            <a href="" id="signin" class="active">输入确认密码</a>
    </header>
    <form role="form" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label">确认密码：</label>
            <div class="col-sm-7">
                <input type="password" id="confirmpwd" placeholder="确认密码">
            </div>
        </div>
        <div class="form-group">            
            <div class="col-sm-12 center">
                <button type="button" class="btn btn-default submit">确认</button>
            </div>
        </div>
    </form>
</div>
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">会员管理</a>
                            </li>
                            <li>会员资产</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">会员资产</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("membercapitaldetail", "Order", FormMethod.Get, new { @id = "form1" }))
                        {                            
                            <div class="form-group">
                                <label class="pull-left control-label">手机号</label>
                                <div class="col-sm-2">
                                    @Html.TextBoxFor(m => m.smodel.MemberPhone, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="pull-left control-label">真实姓名</label>
                                <div class="col-sm-2">
                                    @Html.TextBoxFor(m => m.smodel.MemberName, new { @class = "form-control" })
                                </div>
                            </div>                           
                            <div class="btn-group pull-right invoice-btn-group">
                                <p class="btn-toolbar">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i>&nbsp;搜索</button>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">会员编号</th>
                                    <th class="text-center">真实姓名</th>
                                    <th class="text-center">手机号</th>
                                    <th class="text-center">静态资金</th>
                                    <th class="text-center">动态资金</th>
                                    <th class="text-center">静态利息</th>
                                    <th class="text-center">动态奖励</th>
                                    <th class="text-center">惩罚资金</th>
                                    <th class="text-center">静态冻结</th>
                                    <th class="text-center">动态冻结</th>
                                    <th class="text-center">操    作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.list)
                                {
                                    <tr id="tr@(item.MemberID)" class="text-center">
                                        <td>@item.MemberID</td>
                                        <td  name="@(item.MemberID)">@item.MemberName</td>
                                        <td>@item.MemberPhone</td>
                                        <td>@item.StaticCapital</td>
                                        <td>@item.DynamicFunds</td>
                                        <td>@item.StaticInterest</td>
                                        <td>@item.DynamicInterest</td>
                                        <td>@item.DynamicPunishMoney</td>
                                        <td>@item.StaticFreezeMoney</td>
                                        <td>@item.DynamicFreezeMoney</td>
                                        <td>
                                            <p class="btn-toolbar">
                                                 <a class="btn btn-success" data-toggle="modal"  href="#box-config1" onclick="bclick(@item.MemberID)"><i class="fa fa-times-circle"></i>&nbsp; 奖&nbsp;&nbsp;励</a>
                                                <a class="btn btn-danger" data-toggle="modal"  href="#box-config" onclick="aclick(@item.MemberID)"><i class="fa fa-times-circle"></i>&nbsp; 惩&nbsp;&nbsp;罚</a>
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row center col-xs-12 mycss">
                        @Html.Pager(Model.list, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section mycss{
    <link rel="stylesheet" type="text/css" href="@Url.Content("/js/jquery-iziModal/css/demo.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("/js/jquery-iziModal/css/iziModal.css")">
}
@section scriptfiles{
    <script src="@Url.Content("/js/bootbox/bootbox.min.js")"></script>
    <script src="@Url.Content("/js/jquery-iziModal/js/iziModal.min.js")" type="text/javascript"></script>
}
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            //全选
            //$("#chk_all").click(function () {
            //    if ($("#chk_all").is(":checked")) {
            //        $("input[type='checkbox'][name='proList']").prop("checked", true);
            //    }
            //    else {
            //        $("input[type='checkbox'][name='proList']").prop("checked", false);
            //    }
            //});
            $("#modal-custom").iziModal({
                overlayClose: false,
                width: 600,
                autoOpen: true,
                closeOnEscape: false,
                overlayColor: 'rgba(0, 0, 0, 0.6)'
            });
            $("#modal-custom").on('click', '.submit', function (event) {
                event.preventDefault();
                var pwd = $("#confirmpwd").val();
                if (pwd == '') {
                    bootbox.alert("请输入密码！");
                    return false;
                }
                $.ajax({
                    url: "@Url.Action("checkconfirmpwd", "Order", new { area = "AdminArea" })",
                    datatype: "json",
                    async: false,
                    type: "POST",
                    data: { 'pwd': pwd },
                    success: function (data) {
                        if (data == '1') {
                            $('#modal-custom').iziModal('close');
                        }
                        else {
                            bootbox.alert(data);
                        }
                    }
                });
            });
        });
        function aclick(id) {
            $("#memid").val(id);
        }
        function bclick(id) {
            $("#hmemid").val(id);
        }
        function punishment() {
            var money = $("#money").val();
            var reason = $("#punishmentreason").val();
            var memberid = $("#memid").val();
            var type = $("input:radio[name=optionsRadios2]:checked").val();
            $.ajax({
                url: '@Url.Action("punishmentmember", "Order", new { area = "AdminArea" })',
                dataType: 'Json',
                data: { 'id': memberid, 'money': money, 'reason': reason,'type':type },
                type: 'POST',
                success: function (data) {
                    if (data == "1") {
                        location.reload();
                    }
                    else {
                        bootbox.alert("操作失败");
                    }
                }
            });
        }
        function paymentmoney() {
            var memberid = $("#hmemid").val();
            var money = $("#hmoney").val();
            var type = $("input:radio[name=optionsRadios1]:checked").val();
            $.ajax({
                url: "@Url.Action("paymentdymicmoneyv1", "Order", new { area = "AdminArea" })",
                datatype: "json",
                async: false,
                type: "POST",
                data: { "id": memberid, "money": money,"type":type },
                success: function (data) {
                    if (data == '1') {
                        location.reload();
                    }
                    else {
                        bootbox.alert(data);
                    }
                }
            });
        }
    </script>
}
