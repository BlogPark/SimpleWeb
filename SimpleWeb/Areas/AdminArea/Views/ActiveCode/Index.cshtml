@using Webdiyer.WebControls.Mvc
@model SimpleWeb.Areas.AdminArea.Models.ActiveCodeIndexViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">激活码管理</a>
                            </li>
                            <li>激活码管理</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">激活码管理</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("Index", "MemberOpera", FormMethod.Get, new { @id = "form1" }))
                        {
                            <div class="form-group">
                                <label class="pull-left control-label">激活编码</label>
                                <div class="col-sm-1">
                                    @Html.TextBoxFor(m => m.activecode.ActivationCode, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="pull-left control-label">类型</label>
                                <div class="col-sm-2">
                                    @Html.DropDownListFor(m => m.activecode.AType, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="pull-left control-label">状态</label>
                                <div class="col-sm-2">
                                    @Html.DropDownListFor(m => m.activecode.AStatus, null, new { @class = "form-control" })
                                </div>
                            </div>                  
                            <div class="btn-group hidden-xs pull-right invoice-btn-group">
                                <p class="btn-toolbar">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i>&nbsp;搜索</button>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="btn-group hidden-xs pull-left invoice-btn-group">
                            <p class="btn-toolbar">
                                <button class="btn btn-info" type="button" onclick="setcommend(1)"><i class="fa fa-cog"></i>&nbsp;生成激活码</button>
                                <button class="btn btn-info" type="button" onclick="setcommend(0)"><i class="fa fa-times"></i>&nbsp;批量派发</button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <input type="checkbox" id="chk_all" /></th>
                                    <th class="text-center">编号</th>
                                    <th class="text-center">激活码</th>
                                    <th class="text-center">类型</th>
                                    <th class="text-center">状态</th>
                                    <th class="text-center">添加时间</th>
                                    <th class="text-center">操        作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.activecodelist)
                                {

                                    <tr id="tr@(item.ID)" class="text-center">
                                        <td>
                                            <input type="checkbox" name="proList" value="@item.ID" /></td>
                                        <td>@item.ID</td>
                                        <td>@item.ActivationCode</td>
                                        <td name="@(item.AType)">@item.ATypeName</td>
                                        <td name="@(item.AStatus)">
                                            @item.MStatusName
                                        </td>
                                        <td>@item.AddTime.ToString("yyyy-MM-dd HH:ss")</td>
                                        <td>
                                            <p class="btn-toolbar">
                                                @if (item.AStatus == 20)
                                                {

                                                    <button class="btn btn-danger" data-toggle="modal" onclick="update(@item.ID,2)" ><i class="fa fa-times-circle"></i>&nbsp; 派&nbsp; &nbsp; 发</button>
                                                }
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row center col-xs-12 mycss">
                        @Html.Pager(Model.activecodelist, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                    </div>
                    <input id="hiddencode" type="hidden" />
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptfiles{
    <script src="@Url.Content("/js/bootbox/bootbox.min.js")"></script>
}
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            //全选
            $("#chk_all").click(function () {
                if ($("#chk_all").is(":checked")) {
                    $("input[type='checkbox'][name='proList']").prop("checked", true);
                }
                else {
                    $("input[type='checkbox'][name='proList']").prop("checked", false);
                }
            });
        });
        function ressign(memberphone) {
            var codes = $("#hiddencode").val();
            $.ajax({
                url: '@Url.Action("ressign", "ActiveCode", new { area = "AdminArea" })',
                dataType: 'Json',
                data: { 'code': codes, 'memberphone': memberphone },
                type: 'POST',
                success: function (data) {
                    if (data == "1") {
                        location.reload();
                    }
                    else {
                        bootbox.alert("操作失败");
                    }
                }
            });
        }
        function create(type,count) {
            $.ajax({
                url: '@Url.Action("addcode", "ActiveCode", new { area = "AdminArea" })',
                dataType: 'Json',
                data: { 'count': count, 'type': type },
                type: 'POST',
                success: function (data) {
                    if (data == "1") {
                        location.reload();
                    }
                    else {
                        bootbox.alert("操作失败");
                    }
                }
            });
        }
    </script>
}

