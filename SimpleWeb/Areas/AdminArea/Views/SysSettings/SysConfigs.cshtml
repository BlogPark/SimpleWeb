<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">系统设置</a>
                            </li>
                            <li>系统配置项管理</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">系统配置项管理</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            <div class="row">
                <div class="col-sm-11">
                    <div class="btn-group  pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="#box-config1" id="addnew"><i class="fa fa-plus"></i>&nbsp;添加新项</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">配置项编号</th>
                                    <th class="text-center">配置项名称</th>
                                    <th class="text-center">配置项值</th>
                                    <th class="text-center">配置项备注</th>
                                    <th class="text-center">配置项状态</th>
                                    <th class="text-center">编  辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SysAdminConfigsModel item in Model.Allconfigs)
                                {
                                    <tr id="tr@(item.ID)">
                                        <td>@item.ID</td>
                                        <td>@item.ConfigName</td>
                                        <td>@item.ConfigValue</td>
                                        <td>@item.ConfigRemark</td>                                      
                                        <td name="@(item.ConfigStatus)">
                                            @item.ConfigStatusName
                                        </td>   
                                        <td style="display:none">@item.ConfigFID</td>                                    
                                        <td class="center">
                                            <p class="btn-toolbar">
                                                <a class="btn btn-warning" data-toggle="modal" href="#box-config" onclick="updatemassage(@item.ID)"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a>
                                                <!--<button class="btn btn-danger" onclick="deluser(@item.ID)"><i class="fa fa-times-circle"></i>&nbsp; 禁 用</button>-->
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptfiles{
    <!-- BOOTBOX -->
    <script type="text/javascript" src="@Url.Content("/js/bootbox/bootbox.min.js")"></script>
}
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            $("#AConfig_ConfigStatus").val(1);
            $("#fatheritem").change(function () {
                var id = $(this).val();
                $("#AConfig_ConfigFID").val(id);
            });
            $("#updconfig").change(function () {
                var id = $(this).val();
                $("#UConfig_ConfigFID").val(id);
            });
            $("input:radio[name=optionsRadios1]").change(function () {
                var id = $(this).val();
                $("#AConfig_ConfigStatus").val(id);
            });
            $("input:radio[name=optionsRadios2]").change(function () {
                var id = $(this).val();
                $("#UConfig_ConfigStatus").val(id);
            });
        });
        function updatemassage(id) {
            var dtr = $("#tr" + id).children('td');
            if (dtr) {
                var id = dtr.eq(0).html();
                var cname = dtr.eq(1).html();
                var cvalue = dtr.eq(2).html();
                var cremark = dtr.eq(3).html();
                var cfid = dtr.eq(5).html();
                var cstatus = dtr.eq(4).attr("name");

                $("#UConfig_ID").val(id);
                $("#UConfig_ConfigName").val(cname);
                $("#UConfig_ConfigValue").val(cvalue);
                $("#UConfig_ConfigRemark").val(cremark);
                $("#UConfig_ConfigFID").val(cfid);
                $("#UConfig_ConfigStatus").val(cstatus);
                $("input:radio[name=optionsRadios2][value=" + cstatus + "]").prop("checked", true);
                $("#updusergroup option[value=" + cfid + "]").attr("selected", true);
            }
        }
        function deluser(id) {
            bootbox.confirm("确定要禁用此配置项?", function (result) {
                if (result) {
                    $.ajax({
                        url: '@Url.Action("DelConfigs", "SysSettings", new { area = "AdminArea" })',
                        datatype: 'json',
                        async: false,
                        type: 'POST',
                        data: { 'id': id },
                        success: function (data) {
                            if (data == "1") {
                                var dtr = $("#tr" + id).children('td');
                                if (dtr) {
                                    dtr.eq(4).attr("name", "0");
                                    dtr.eq(4).html("禁用");
                                }
                                bootbox.alert("操作成功");
                                setTimeout(function () {
                                    $(".bootbox").modal("hide");
                                }, 2000);
                            }
                            else { bootbox.alert("操作失败"); }
                        }
                    });
                }
            });
        }
    </script>
}

