@using SimpleWeb.DataModels
@model SimpleWeb.Areas.AdminArea.Models.SysConfigsViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">添加配置项</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    @using (Html.BeginForm("AddSysConfigs", "SysSettings", FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "form1" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">配置项名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.AConfig.ConfigName, new { @class = "form-control", @placeholder = "配置项名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">配置项值：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.AConfig.ConfigValue, new { @class = "form-control", @placeholder = "配置项值" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">配置项备注：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.AConfig.ConfigRemark, new { @class = "form-control", @placeholder = "配置项备注" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">上级配置项：</label>
                            <div class="col-sm-7">
                                <p class="btn-toolbar">
                                    <select class="form-control" id="fatheritem">
                                        <option value="0">顶级配置项</option>
                                        @foreach (SysAdminConfigsModel item in Model.FatherConfigs)
                                        {
                                            <option value="@item.ID">@item.ConfigName</option>
                                        }
                                    </select>
                                </p>
                                @Html.HiddenFor(m => m.AConfig.ConfigFID)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">配置项状态：</label>
                            <div class="col-sm-7">
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="1" checked>
                                    启用
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="0">
                                    禁用
                                </label>
                                @Html.HiddenFor(m => m.AConfig.ConfigStatus)
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" class="btn btn-primary" onclick="javascript: document.getElementById('form1').submit(); return false;">保  存</button>
            </div>
        </div>
    </div>
</div>
<!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->
