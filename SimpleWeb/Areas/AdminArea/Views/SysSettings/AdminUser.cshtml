@using SimpleWeb.DataModels
@model SimpleWeb.Areas.AdminArea.Models.AdminUserViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">添加用户</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    @using (Html.BeginForm("AddAdminUser", "SysSettings", FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "form1" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">用户名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.User.UserName, new { @class = "form-control", @placeholder = "用户名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">登录名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.User.LoginName, new { @class = "form-control", @placeholder = "登录名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">用户邮箱：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.User.UserEmail, new { @class = "form-control", @placeholder = "用户邮箱" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">联系方式：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.User.UserPhone, new { @class = "form-control", @placeholder = "联系方式" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">真实姓名：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.User.TruethName, new { @class = "form-control", @placeholder = "真实姓名" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">所属组名：</label>
                            <div class="col-sm-7">
                                <p class="btn-toolbar">
                                    <select class="form-control" id="usergroup">
                                        @foreach (SysAdminUserGroupModel item in Model.Groups)
                                        {
                                            <option value="@item.ID">@item.GroupName</option>
                                        }
                                    </select>
                                </p>
                                @Html.HiddenFor(m => m.User.GID)
                                @Html.HiddenFor(m => m.User.GName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">用户状态：</label>
                            <div class="col-sm-7">
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="1" checked>
                                    活动
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="0">
                                    禁用
                                </label>
                                @Html.HiddenFor(m => m.User.UserStatus)
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" class="btn btn-primary" onclick="javascript: document.getElementById('form1').submit(); return false;">保  存</button>
            </div>
        </div>
    </div>
</div>
<!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->
