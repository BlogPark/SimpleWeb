@section scriptfiles{
    <!-- BOOTBOX -->
    <script type="text/javascript" src="@Url.Content("/js/bootbox/bootbox.min.js")"></script>
}

@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            $("#User_GID").val($("#usergroup").val());
            $("#User_GName").val($("#usergroup").find(":checked").text());
            $("#User_UserStatus").val($("input:radio[name=optionsRadios1]:checked").val());
            $("#usergroup").change(function () {
                var id = $(this).val();
                var name = $(this).find(":checked").text();
                $("#User_GID").val(id);
                $("#User_GName").val(name);
            });
            $("#updusergroup").change(function () {
                var id = $(this).val();
                var name = $(this).find(":checked").text();
                $("#UpdateUser_GID").val(id);
                $("#UpdateUser_GName").val(name);
            });
            $("input:radio[name=optionsRadios1]").change(function () {
                var id = $(this).val();
                $("#User_UserStatus").val(id);
            });
            $("input:radio[name=optionsRadios2]").change(function () {
                var id = $(this).val();
                $("#UpdateUser_UserStatus").val(id);
            });
        });
        function updatemassage(id) {
            var dtr = $("#tr" + id).children('td');
            if (dtr) {
                var id = dtr.eq(0).html();
                var username = dtr.eq(1).html();
                var loginname = dtr.eq(2).html();
                var usermail = dtr.eq(3).html();
                var truename = dtr.eq(4).html();
                var userphone = dtr.eq(5).html();
                var groupid = dtr.eq(6).attr("name");
                var groupname = dtr.eq(6).html();
                var userstatus = dtr.eq(8).attr("name");

                $("#UpdateUser_ID").val(id);
                $("#UpdateUser_UserName").val(username);
                $("#UpdateUser_LoginName").val(loginname);
                $("#UpdateUser_UserEmail").val(usermail);
                $("#UpdateUser_UserPhone").val(userphone);
                $("#UpdateUser_TruethName").val(truename);
                $("#UpdateUser_GID").val(groupid);
                $("#UpdateUser_GName").val(groupname);
                $("#UpdateUser_UserStatus").val(userstatus);
                $("input:radio[name=optionsRadios2][value=" + userstatus + "]").prop("checked", true);
                $("#updusergroup option[value=" + groupid + "]").attr("selected", true);;
            }
        }
        function deluser(id) {
            bootbox.confirm("确定要禁用此用户?", function (result) {
                if (result) {
                    $.ajax({
                        url: '@Url.Action("DelAdminUser", "SysSettings", new { area = "AdminArea" })',
                        datatype: 'json',
                        async: false,
                        type: 'POST',
                        data: { 'id': id },
                        success: function (data) {
                            if (data == "1") {
                                var dtr = $("#tr" + id).children('td');
                                if (dtr) {
                                    dtr.eq(8).attr("name", "0");
                                    dtr.eq(8).html("禁用");
                                }
                                bootbox.alert("操作成功");
                                setTimeout(function () {
                                    $(".bootbox").modal("hide");
                                }, 2000);
                            }
                            else { bootbox.alert("操作失败"); }
                        }
                    });
                }
            });
        }
    </script>
}