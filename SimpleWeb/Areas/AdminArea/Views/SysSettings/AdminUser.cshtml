                <div class="col-sm-11">
                    <div class="btn-group hidden-xs pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="#box-config1" id="addnew"><i class="fa fa-plus"></i>&nbsp;添加新用户</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th>用户编号</th>
                                    <th>用户名称</th>
                                    <th>登录名称</th>
                                    <th>用户邮箱</th>
                                    <th>真实姓名</th>
                                    <th>联系方式</th>
                                    <th>所属组名称</th>
                                    <th>头像地址</th>
                                    <th>用户状态</th>
                                    <th>编  辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SysAdminUserModel item in Model.UserLists)
                                {
                                    <tr id="tr@(item.ID)">
                                        <td>@item.ID</td>
                                        <td>@item.UserName</td>
                                        <td>@item.LoginName</td>
                                        <td>@item.UserEmail</td>
                                        <td>@item.TruethName</td>
                                        <td>@item.UserPhone</td>
                                        <td name="@(item.GID)">
                                            @item.GName
                                        </td>
                                        <td>@item.HeaderImg</td>
                                        <td name="@(item.UserStatus)">
                                            @item.UserStatusName
                                        </td>
                                        <td>
                                            <p class="btn-toolbar">
                                                <a class="btn btn-warning" data-toggle="modal" href="#box-config" onclick="updatemassage(@item.ID)"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a>
                                                <button class="btn btn-danger" onclick="deluser(@item.ID)"><i class="fa fa-times-circle"></i>&nbsp; 禁 用</button>
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
