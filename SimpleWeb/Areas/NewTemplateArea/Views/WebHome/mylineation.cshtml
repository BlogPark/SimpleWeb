@using Webdiyer.WebControls.Mvc
@model SimpleWeb.Areas.NewTemplateArea.Models.MyActiveIndexModel
@{
    Layout = "~/Views/_NewTempleteLayout.cshtml";
}
<div class="row-fluid"></div>
<div class="row-fluid">
    <div class="widget span12">
        <div class="widget-header">
            <i class="icon-signal"></i>
            <h5>我的排单币列表</h5>
            <div class="widget-buttons">
                <a data-collapsed="false" class="collapse" href="javascript:void(0)"><i class="icon-chevron-up" data-title="Collapse"></i></a>
            </div>
        </div>
        <div class="widget-header-under">当前可用排单币数量 @Model.EnableCount 个</div>
        <div style="min-height: 319px; display: block;" class="widget-body clearfix">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>排单币</th>
                        <th>状态</th>
                        <th>使用对象</th>
                        <th>使用时间</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.orderlist.Any())
                    {
                        foreach (var item in Model.orderlist)
                        {
                        <tr>
                            <td>@item.ActiveCode</td>
                            <td>@item.AMStatusName</td>
                            <td>@item.UseCode</td>
                            <td>@item.UserTime.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>   
                        }
                    }
                </tbody>
            </table>
            <div class="span12">
                <div class="dataTables_paginate paging_bootstrap pagination center">
                    @Html.Pager(Model.orderlist, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">    
    <div class="widget widget-padding span6">
        <div class="widget-header">
            <i class="icon-list-alt"></i>
            <h5>转赠激活码/排单币</h5>
        </div>
        <div class="widget-body" style="height: 260px;">
            <div class="widget-forms clearfix">
                <form class="form-horizontal">
                    <div class="control-group">
                        <label class="control-label">类型</label>
                        <div class="controls">
                            <select tabindex="1" data-placeholder="Select here.." class="span7" id="codetype">                               
                                <option value="2">排单币</option> 
                                <option value="1">激活码</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">会员手机号</label>
                        <div class="controls">
                            <input class="span7" type="text" placeholder="会员手机号" id="acceptcodemember" name="acceptcodemember">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">转赠个数</label>
                        <div class="controls">
                            <input class="span7" type="text" placeholder="转赠个数" id="acceptcodecount" name="acceptcodecount" >
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button class="btn btn-primary" type="button" onclick="activegive()">转  赠</button><lable id="passmsg" style='margin-left: 10px'></lable>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="widget widget-padding span6">
        <div class="widget-header">
            <i class="icon-list-alt"></i>
            <h5>协助激活会员</h5>
        </div>
        <div class="widget-body" style="height: 260px;">
            <div class="widget-forms clearfix">
                <form class="form-horizontal">
                    <div class="control-group">
                        <label class="control-label">会员手机号</label>
                        <div class="controls">
                            <input class="span7" type="text" placeholder="会员手机号" id="needactivemember" name="needactivemember">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">激活码编号</label>
                        <div class="controls">
                            <input class="span7" type="text" placeholder="激活码编号" id="useactivecode" name="useactivecode">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button class="btn btn-primary" type="button" onclick="activemember()">激 活</button><lable id="activemsg" style='margin-left: 10px'></lable>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
