@model SimpleWeb.Areas.NewTemplateArea.Models.UserProfileViewModel
@{
    Layout = "~/Views/_NewTempleteLayout.cshtml";
}
<div class="row-fluid"></div>
<div class="row-fluid">
    <div class="widget  widget-padding  span9">
        <div class="widget-header">
            <i class="icon-circle"></i>
            <h5>我的个人资料</h5>
            <div class="widget-buttons">
                <a href="javascript:void(0)" class="collapse" data-collapsed="false"><i data-title="Collapse" class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="widget-body">
            <div class="widget-forms clearfix">
                <form class="form-horizontal" method="post">
                    <div class="control-group">
                        <label class="control-label">真实姓名</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.member.TruethName, new { @class = "span7", @placeholder = "真实姓名" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">手机号码</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.member.MobileNum, new { @class = "span7", @placeholder = "手机号码" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">微信账号</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.member.WeixinNum, new { @class = "span7", @placeholder = "微信账号" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">支付宝账户</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.member.AliPayName, new { @class = "span7", @placeholder = "支付宝账户" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">支付宝名称</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.member.AliPayNum, new { @class = "span7", @placeholder = "支付宝名称" });
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">归属地</label>
                        <div class="controls">
                            <input class="span7" type="text" placeholder="归属地" value="@(Model.member.Province + " " + Model.member.City + " " + Model.member.Area)" readonly="">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">注册时间</label>
                        <div class="controls">
                            <input class="span7" type="text" placeholder="注册时间" value="@Model.member.AddTime.ToString("yyyy-MM-dd HH:mm")" readonly="">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button class="btn btn-primary" type="submit">保  存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="widget  widget-padding  span3">
        <div class="widget-header">
            <i class="icon-bar-chart"></i>
            <h5>更改登陆密码</h5>
            <div class="widget-buttons">
                <a href="javascript:void(0)" class="collapse" data-collapsed="false"><i data-title="Collapse" class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="widget-body">
            <div class="widget-forms clearfix">
                <form class="form-horizontal">
                    <div class="control-group">
                        <label class="formcontrollable control-label">新密码</label>
                        <div class="formcontrol controls">
                            <input type="password" id="mynewpwd1" name="mynewpwd1" placeholder="新密码" value="" class="span9" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="formcontrollable control-label">确认密码</label>
                        <div class="formcontrol controls">
                            <input type="password" id="mynewpwd" name="mynewpwd" placeholder="确认密码" value="" class="span9" />
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <a class="btn btn-primary" onclick="changlogpwd()">保  存</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
