@using Webdiyer.WebControls.Mvc
@model SimpleWeb.Areas.NewTemplateArea.Models.mycapitallistViewModel
@{
    Layout = "~/Views/_NewTempleteLayout.cshtml";
}
<div class="row-fluid"></div>
<div class="row-fluid">
    <div class="widget span12">
        <div class="widget-header">
            <i class="icon-signal"></i>
            <h5>我的资金变动列表</h5>
            <div class="widget-buttons">
                <a data-collapsed="false" class="collapse" href="javascript:void(0)"><i class="icon-chevron-up" data-title="Collapse"></i></a>
            </div>
        </div>
        <div class="widget-header-under">我的资金变动列表</div>
        <div style="min-height: 319px; display: block;" class="widget-body clearfix">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>变动描述</th>
                        <th>金额</th>
                        <th>使用单据编号/用户名</th>
                        <th>变动时间</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.list)
                    {
                        <tr>
                            <td>@item.Remark</td>
                            <td>@item.ProduceMoney</td>
                            <td>@item.OrderCode</td>
                            <td>@(item.AddTime == DateTime.MinValue ? "" : item.AddTime.ToString("yyyy-MM-dd HH:mm"))</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="span12">
                <div class="dataTables_paginate paging_bootstrap pagination center">
                    @Html.Pager(Model.list, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                </div>
            </div>
        </div>
    </div>
</div>


