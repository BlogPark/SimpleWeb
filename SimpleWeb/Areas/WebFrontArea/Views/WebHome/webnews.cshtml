@model SimpleWeb.Areas.WebFrontArea.Models.MemberNewsViewModel
@{
    Layout = "~/Views/_WebLayout.cshtml";
}
<div class="topic">
    <div class="container">
        <div class="row">
            <ol class="breadcrumb hidden-xs">
                <li><a href="index.html">Home</a></li>
                <li class="active">网站公告</li>
            </ol>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 id="accordions"><span>网站公告</span></h2>
            <hr />
            <div class="panel-group" id="accordion">
                @foreach (var item in Model.news)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a data-toggle="collapse" data-parent="#accordion" href="#@(item.ID.ToString() + "news")">@item.STitle</a>
                        </div>
                        <div id="@(item.ID.ToString() + "news")" class="panel-collapse collapse in">
                            <div class="panel-body">
                                @item.SContent
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

